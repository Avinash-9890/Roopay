<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded Corners -->
    <corners android:radius="12dp" />

    <!-- Border -->
    <stroke
        android:width="1.5dp"
        android:color="#B0B0B0" />

    <!-- Inner Padding -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>
